@model IEnumerable<ToDo.Application.Dtos.Item.ItemResponseDto>
@{
    ViewData["Title"] = "Index";
}

<p>
    <a asp-action="Create">Adicionar tarefa</a>
</p>

<table id="item" class="table">
    <thead>
    <tr class="">
        <th>Descrição</th>
        <th>Data de criação</th>
        <th>Status</th>
        <th>Ações</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Description</td>
            <td>@item.CreatedAt</td>
            <td>
                @Html.CheckBoxFor(m => item.Done, new { @value = "True" })
            </td>
            <td>
                <a href="@Url.Action("Edit", "Item", new { id = item.Id })">Editar</a>
                <a href="@Url.Action("Remove", "Item", new { id = item.Id })">Apagar</a>
            </td>
        </tr>
    }
    </tbody>
</table>

<script>
    function add() {
        window.location.href = ''
    }
</script>